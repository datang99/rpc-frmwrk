include ../../Makefile.init.pub

TARGET:=libsslpt.so
SOURCES:= sslfido.cpp dllexp.cpp sslutils.cpp

SSL_INC:=$(shell PKG_CONFIG_PATH=$(PKGCONFIGPATH) pkg-config --define-variable=prefix=$(ROOTFS)/usr --cflags openssl)

C_INCLUDE:= \
	-I$(BASE)/ipc \
	-I$(BASE)/rpc \
	$(C_INCLUDE) $(SSL_INC)

OBJS:=$(SOURCES:%.cpp=$(OBJ_DIR)/%.o)

all: $(OUTPUT_DIR)/$(TARGET)
debug: $(OUTPUT_DIR)/$(TARGET)
release: $(OUTPUT_DIR)/$(TARGET)

SSL_LINK:=$(shell PKG_CONFIG_PATH=$(PKGCONFIGPATH) pkg-config --define-variable=prefix=$(ROOTFS)/usr --libs openssl)

$(OUTPUT_DIR)/$(TARGET) : $(OBJS)
	@if [ ! -d $(OUTPUT_DIR) ]; then mkdir -p $(OUTPUT_DIR);fi
	$(CC) -o $(OUTPUT_DIR)/$(TARGET) $(OBJS) -shared $(LINKER_OPTION) -L$(OUTPUT_DIR) -lrpc -lipc -lcombase $(SSL_LINK)

-include $(OBJS:%.o=%.d)

debug_clean: do_clean
release_clean: do_clean

clean:
	make debug_clean
	make release_clean

do_clean:
	-@rm $(OBJ_DIR)/*.d $(MUTE_CLEAN)
	-@rm $(OUTPUT_DIR)/$(TARGET) $(MUTE_CLEAN)
	-@rm $(OBJS) $(MUTE_CLEAN)

.PHONY: sync
