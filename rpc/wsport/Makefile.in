include ../../Makefile.init.pub

TARGET:=libwspt.so
SOURCES:= wsfido.cpp dllexp.cpp
C_INCLUDE:= \
	-I$(BASE)/ipc \
	-I$(BASE)/rpc \
	$(C_INCLUDE)

OBJS:=$(SOURCES:%.cpp=$(OBJ_DIR)/%.o)

all: $(OUTPUT_DIR)/$(TARGET)
debug: $(OUTPUT_DIR)/$(TARGET)
release: $(OUTPUT_DIR)/$(TARGET)

$(OUTPUT_DIR)/$(TARGET) : $(OBJS) $(OBJ_DIR)/libwsock.a
	@if [ ! -d $(OUTPUT_DIR) ]; then mkdir -p $(OUTPUT_DIR);fi
	$(CC) -o $(OUTPUT_DIR)/$(TARGET) $(LINKER_OPTION)  -lssl -lcrypto $(OBJS) $(OBJ_DIR)/libwsock.a

$(OBJ_DIR)/libwsock.a :
	make -C ./wsproto 

-include $(OBJS:%.o=%.d)

debug_clean: do_clean
release_clean: do_clean

clean:
	make debug_clean
	make release_clean

do_clean:
	-@rm $(OBJ_DIR)/*.d $(MUTE_CLEAN)
	-@rm $(OUTPUT_DIR)/$(TARGET) $(MUTE_CLEAN)
	-@rm $(OBJS) $(MUTE_CLEAN)

.PHONY: sync
