# Specify sip v5 as the build system for the package.
[build-system]
requires = ["sip >=5, <6"]
build-backend = "sipbuild.api"

# Specify the PEP 566 metadata for the project.
[tool.sip.metadata]
name = "rpcbase"

[tool.sip.bindings.rpcf]
headers = ["rpc.h"]
include-dirs = [ "YYY/include","YYY/ipc"XXXXXXXX ]
libraries = [FUSELIB, "ipc", "combase"]
library-dirs = ["YYY/combase/.libs", "YYY/ipc/.libs", "YYY/fuse/.libs" ]
extra-link-args=["XXXWLRPATH"]
extra-compile-args=["-fno-strict-aliasing"ZZZZZ ]
debug = true
tracing = true
define-macros = ["_USE_LIBEV" ]
disabled-features = [zzzzz]
